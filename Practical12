import 'package:flutter/material.dart';

void main() {
  runApp(const MyApp());
}

class MyApp extends StatelessWidget {
  const MyApp({super.key});

  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      title: 'Flutter Navigation Demo',
      theme: ThemeData(primarySwatch: Colors.blue),
      // Задание 3: Регистрация именованных маршрутов
      initialRoute: '/',
      routes: {
        '/': (context) => const HomeScreen(),

        '/details': (context) => const DetailsScreen(name: 'Гость'),
      },
    );
  }
}

// --- HomeScreen ---
class HomeScreen extends StatefulWidget {
  const HomeScreen({super.key});

  @override
  State<HomeScreen> createState() => _HomeScreenState();
}

class _HomeScreenState extends State<HomeScreen> {
  // Контроллер для извлечения текста из TextField (Задание 2)
  final TextEditingController _controller = TextEditingController();

  @override
  void dispose() {
    _controller.dispose();
    super.dispose();
  }

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(title: const Text('Главный экран')),
      body: Padding(
        padding: const EdgeInsets.all(16.0),
        child: Column(
          mainAxisAlignment: MainAxisAlignment.center,
          children: [
            // Задание 2: TextField для ввода имени
            TextField(
              controller: _controller,
              decoration: const InputDecoration(
                labelText: 'Введите ваше имя',
                border: OutlineInputBorder(),
              ),
            ),
            const SizedBox(height: 20),

            // Задание 1 и 2: Базовая навигация с передачей данных
            ElevatedButton(
              onPressed: () {
                String userName = _controller.text;
                // Navigator.push создает переход на новый экран
                Navigator.push(
                  context,
                  MaterialPageRoute(
                    builder: (context) => DetailsScreen(name: userName),
                  ),
                );
              },
              child: const Text('Перейти к деталям (простой push)'),
            ),

            const SizedBox(height: 10),

            // Задание 3: Переход через именованный маршрут
            OutlinedButton(
              onPressed: () {
                // Использование имени маршрута, указанного в MaterialApp
                Navigator.pushNamed(context, '/details');
              },
              child: const Text('Перейти через именованный маршрут'),
            ),
          ],
        ),
      ),
    );
  }
}

// --- DetailsScreen ---
class DetailsScreen extends StatelessWidget {
  // Задание 2: Прием данных через конструктор
  final String name;

  const DetailsScreen({super.key, required this.name});

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(title: const Text('Экран деталей')),
      body: Center(
        child: Column(
          mainAxisAlignment: MainAxisAlignment.center,
          children: [
            const Text(
              'Детали',
              style: TextStyle(fontSize: 24, fontWeight: FontWeight.bold),
            ),
            const SizedBox(height: 10),
            // Отображение переданного имени
            Text(
              'Привет, $name!',
              style: const TextStyle(fontSize: 18),
            ),
            const SizedBox(height: 20),
            // Кнопка "Назад" для возврата на предыдущий экран
            ElevatedButton(
              onPressed: () {
                // Закрывает текущий экран и возвращает пользователя назад
                Navigator.pop(context);
              },
              child: const Text('Назад'),
            ),
          ],
        ),
      ),
    );
  }
}
